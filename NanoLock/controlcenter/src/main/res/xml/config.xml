<?xml version='1.0' encoding='utf-8'?>
<widget id="com.cooee.hybridlocker" version="0.0.1">
    <preference name="loglevel" value="DEBUG"/>
    <allow-intent href="market:*"/>
    <name>HybridLocker</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html"/>
    <access origin="*"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    <feature name="Whitelist">
        <param name="android-package" value="com.cooeeui.cordova.plugins.WhitelistPlugin"/>
        <param name="onload" value="true"/>
    </feature>
    <feature name="Camera">
        <param name="android-package" value="com.cooeeui.cordova.plugins.camera.CameraLauncher"/>
    </feature>
    <feature name="Flashlight">
        <param name="android-package" value="com.cooeeui.cordova.plugins.Flashlight"/>
    </feature>
    <feature name="BluetoothStatus">
        <param name="android-package" value="com.cooeeui.cordova.plugins.BluetoothStatus"/>
    </feature>
    <feature name="WifiWizard">
        <param name="android-package" value="com.cooeeui.cordova.plugins.WifiWizard"/>
    </feature>
    <feature name="MobileDataWizard">
        <param name="android-package"
               value="com.cooeeui.cordova.plugins.mobiledata.MobileDataWizard"/>
    </feature>
    <feature name="AppsApi">
        <param name="android-package" value="com.cooeeui.cordova.plugins.AppsApi"/>
    </feature>
    <feature name="TouchEventPrevent">
        <param name="android-package" value="com.cooeeui.cordova.plugins.TouchEventPrevent"/>
    </feature>
    <feature name="EventStatistics">
        <param name="android-package" value="com.cooeeui.cordova.plugins.EventStatistics"/>
    </feature>
    <feature name="ApkPlugin">
        <param name="android-package" value="com.cooeeui.core.plugin.ApkPlugin"/>
    </feature>
    <feature name="JarPlugin">
        <param name="android-package" value="com.cooeeui.core.plugin.JarPlugin"/>
    </feature>
</widget>
