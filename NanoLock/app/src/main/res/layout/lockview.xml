<?xml version="1.0" encoding="utf-8"?>
<com.cooeeui.nanolock.LockFrameContainer
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:blur="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <FrameLayout
            android:id="@+id/lock_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg">

        <com.cooeeui.lock.core.blur.GlassView
                android:id="@+id/glass_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:alpha="0"
                blur:blurRadius="15" >

        </com.cooeeui.lock.core.blur.GlassView>

    </FrameLayout>

    <ImageView
            android:id="@+id/iv_time_weather"
            android:layout_width="325dp"
            android:layout_height="130dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:scaleType="fitXY"
            android:src="@drawable/time_weather"/>

    <include
            layout="@layout/keyguard_bottom_area"
            android:layout_height="match_parent"
            android:layout_width="match_parent">
    </include>


</com.cooeeui.nanolock.LockFrameContainer>
